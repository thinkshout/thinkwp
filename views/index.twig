{% extends "base.twig" %}

{% block content %}
	{% if function('is_home') and not function('is_front_page') %}
	<header>
		<h1 class="page-title screen-reader-text">{{function('single_post_title')}}</h1>
	</header>
	{% endif %}
	{% if function('have_posts') %}
	{% for post in posts %}
	{% if post.type != 'post' %}
	{% include 'components/content/content-' ~ post.type ~ '.twig' %}
	{% else %}
	{% include 'components/content/content.twig' %}
	{% endif %}
	{% endfor %}
	{{ function('the_posts_navigation') }}
	{% else %}
	{% include 'components/content/content.twig' %}
	{% endif %}
{% endblock %}