<header id="masthead" class="site-header z-50 relative">
  <nav id="site-navigation" class="main-navigation flex flex-row">
    <div class="site-branding site-title relative opacity-100 visible">
      <a href="{{ function('home_url', '/') }}" rel="home" class="absolute w-full">
        <img src="{{ site_logo }}" alt="Site Logo" />
        <span class="screen-reader-text">{{ site.name }}</span>
        <span class="screen-reader-text site-description">
          {{ site.description }}
        </span>
      </a>
    </div>
    <!-- .site-branding -->
    <div class="spacer"></div>
    {% embed 'components/menu.twig'
      with {
        menu: header_menu
      }
    %}

    {% endembed %}
    <button class="menu-toggle btn reset relative block lg:hidden"
      aria-controls="{{ header_menu.slug }}"
      aria-expanded="false">
      <span class="menu-toggle__sandwich-layer bg-black left-0 top-0 block relative"></span>
      <span class="menu-toggle__sandwich-layer bg-black left-0 top-0 block relative"></span>
      <span class="menu-toggle__sandwich-layer bg-black left-0 top-0 block relative"></span>
      <span class="screen-reader-text">
        Toggle {{ __(header_menu.name, 'thinkwp') }}
      </span>
    </button>
  </nav>
  <!-- #site-navigation -->
</header>
